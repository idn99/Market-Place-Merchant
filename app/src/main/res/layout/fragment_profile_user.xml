<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileUser">

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circleblue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img_profile"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Nama : "
            android:textSize="12sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_edit_nama_user"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:hint="Ilham Nugrahaa"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_below="@id/tv_nama"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Email : "
            android:textSize="12sp"
            android:layout_below="@id/tv_edit_nama_user"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_edit_email_user"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:hint="IlhamN@gmail.com"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_below="@id/tv_email"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal" />


    </RelativeLayout>

</RelativeLayout>